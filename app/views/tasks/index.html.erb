<h1>一覧</h1>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>作成</th>
    <th>終了</th>
    <th>ステータス</th>
  </tr>


<% @tasks.each do |task| %>
  <tr class="task_row">
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.created_at.strftime('%m月%d日 %H:%M') %></td>
    <td><%= task.end_time.strftime('%m月%d日') %> </td>
    <td><%= task.status %></td>

    <td><%= link_to 'show', task_path(task.id) %></td>
    <td><%= link_to 'edit', edit_task_path(task.id) %></td>
    <td><%= link_to 'delete', task_path(task.id), method: :delete ,data: { confirm: 'OK?'} %></td>

  </tr>

<% end %>




  </table>


  <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
  <%= link_to "制作順でソートする", tasks_path(sort_created: "true") %>

  <%= link_to 'タスク作成', new_task_path %>

<%= form_with(scope: :task, local: true, url: tasks_path, method: :get) do |form| %>
  <%= form.text_field :title, placeholder: 'タイトル検索' %>

  
    <%# <%= form.label t('.status') %>
    <%= form.select :status, Task.statuses.keys, { include_blank: '選択してください'} %>
  
  <%= form.submit '検索'%>
  <% end %>

