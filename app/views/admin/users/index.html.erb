<h1>管理者画面</h1>

<%= link_to 'ユーザーを登録する',new_admin_user_path %>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>タスク数</th>
    <th>管理権限</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin%></td>
        <td><%= link_to '詳細', admin_user_path(user) %></td>
        <td><%= link_to '編集', edit_admin_user_path(user) %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, date: { confirm: '本当に削除してもいいですか？' } %></td>
      </tr>
    <% end %>
</table>
